<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/background_leaves_blocks" />

       <EditText
           android:id="@+id/input_chpassword"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_above="@+id/judge_chpassword"
           android:layout_alignParentLeft="true"
           android:ems="10"
           android:inputType="numberPassword" />

       <Button
           android:id="@+id/judge_voice"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentLeft="true"
           android:layout_marginBottom="136dp"
           android:text="声纹解锁" />
       
       <Button
           android:id="@+id/judge_chpassword"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:text="密码解锁" />

       <TextView
           android:id="@+id/showMsg"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignTop="@+id/judge_voice"
           android:layout_marginTop="82dp" />

       <TextView
           android:id="@+id/showPwd"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="17dp"
           android:textSize="32dp" />

</RelativeLayout>
